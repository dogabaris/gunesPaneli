          chart: {type: 'column'},
          title: {text: 'Panelinin Ortalama Verileri'},
          subtitle: {text: 'Yıllara göre ortalama günlük verileri görmek için üzerine tıklayın.'},
          xAxis: {type: 'category', text: "name"},
          yAxis: {
              title: {
                  text: 'Üretilen toplam enerji miktarı'
              }
          },
          legend: {
              enabled: false
